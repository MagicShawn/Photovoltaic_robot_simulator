<launch>
    <arg name="move_forward_only" default="false"/>
    <arg name="open_rviz" default="true"/>

    <!-- 设置地图的配置文件 -->
    <arg name="map" default="solararray_barrier.yaml" />
    <!-- 运行地图服务器，并且加载设置的地图-->
    <node name="map_server" pkg="map_server" type="map_server" args="$(find mvbs_nav)/maps/$(arg map)"/>
    <!-- 启动AMCL节点 -->
    <!-- <include file="$(find mvbs_nav)/launch/amcl.launch" /> -->
    <!-- 发布map到odom的tf -->
    <node pkg="tf" type="static_transform_publisher" name="map_odom_tf" args="-7.0 0 0 0 0 0 /map /odom 5" />

    <!-- move_base -->
    <include file="$(find mvbs_nav)/launch/move_base.launch">
    <arg name="move_forward_only" value="$(arg move_forward_only)"/>
    </include>

        <!-- 运行rviz -->
    <group if="$(arg open_rviz)"> 
    <node pkg="rviz" type="rviz" name="rviz_solar" required="true"
          args="-d $(find mvbs_nav)/rviz/solar.rviz"/>
    </group>
</launch>