<launch>
    <arg name="open_rviz" default="true"/>



    <!-- 设置地图的配置文件 -->
    <arg name="map" default="solar.yaml" />
    <!-- 运行地图服务器，并且加载设置的地图-->
    <node name="map_server" pkg="map_server" type="map_server" args="$(find mvbs_nav)/maps/$(arg map)"/>
    <!-- 启动AMCL节点 -->
    <include file="$(find mvbs_nav)/launch/amcl.launch" />

    <!-- 运行rviz -->
    <group if="$(arg open_rviz)"> 
    <node pkg="rviz" type="rviz" name="rviz" required="true"
          args="-d $(find mvbs_nav)/rviz/solar.rviz"/>
  </group>

    
</launch>